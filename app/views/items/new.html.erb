<%= form_with(model: @item, local: true) do |f| %>

  <h2>商品登録画面</h2>
  <div class="field">
    <label class="form-text">商品名</label>
    <%= f.text_field :item_name, autofocus: true, maxlength:"40" %>
  </div>

  <div class="field">
    <label class="form-text">量</label>
    <%= f.text_field :volume, autofocus: true, maxlength:"40" %>
  </div>

  <div class="field">
    <label class="form-text">店名</label>
    <%= f.text_field :item_s_name, autofocus: true, maxlength:"40" %>
  </div>

  <div class="field">
    <label class="form-text">店舗名</label>
    <%= f.text_field :item_s_branch, autofocus: true, maxlength:"40" %>
  </div>

  <div class="field">
    <label class="form-text">コメント</label>
    <%= f.text_area :comments, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "追加する" %>
  </div>
<% end %>
